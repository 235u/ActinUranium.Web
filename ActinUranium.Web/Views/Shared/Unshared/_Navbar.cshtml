@using ActinUranium.Web.Controllers;

<nav class="navbar">
    <a class="btn btn-home btn-expand-right"
       asp-controller="@SharedResources.Home"
       asp-action="@nameof(HomeController.Index)">
        <span class="btn-text">@Localizer[SharedResources.Home]</span>
        <img class="btn-img"
             src="~/img/icons/awards.svg"
             asp-append-version="true"
             alt="@Localizer[SharedResources.HomeIcon]" />
    </a>
    <a class="btn btn-creations btn-expand-right"
       asp-controller="@SharedResources.Creations"
       asp-action="@nameof(CreationsController.Index)">
        <span class="btn-text">@Localizer[SharedResources.Creations]</span>
        <img class="btn-img"
             src="~/img/icons/projects.svg"
             asp-append-version="true"
             alt="@Localizer[SharedResources.CreationsIcon]" />
    </a>
    <a class="btn btn-headlines btn-expand-right"
       asp-controller="@SharedResources.Headlines"
       asp-action="@nameof(HeadlinesController.Index)">
        <span class="btn-text">@Localizer[SharedResources.Headlines]</span>
        <img class="btn-img"
             src="~/img/icons/headlines.svg"
             asp-append-version="true"
             alt="@Localizer[SharedResources.HeadlinesIcon]" />
    </a>
    <a class="btn btn-customers btn-expand-right"
       asp-controller="@SharedResources.Customers"
       asp-action="@nameof(CustomersController.Index)">
        <span class="btn-text">@Localizer[SharedResources.Customers]</span>
        <img class="btn-img"
             src="~/img/icons/customers.svg"
             asp-append-version="true"
             alt="@Localizer[SharedResources.CustomersIcon]" />
    </a>
    <a class="btn btn-github btn-expand-right"
       href="https://github.com/235u/website"
       target="_blank"
       rel="noreferrer">
        <span class="btn-text">@Localizer[SharedResources.SourceCode]</span>
        <img class="btn-img"
             src="~/img/icons/github.svg"
             asp-append-version="true"
             alt="@Localizer[SharedResources.GitHubIcon]" />
    </a>
</nav>
