@model IReadOnlyList<Image>

@if (Model.Count > 0)
{
    <div class="carousel">
        @foreach (var image in Model)
        {            
            var className = image == Model.First() ? "active-slide" : "slide";
            <div class="@className">
                <img class="slide-img" src="@image.Source" alt="@image.AlternativeText" asp-append-version="true" />
            </div>
        }

        @if (Model.Count > 1)
        {
            <a class="prev-slide-control"></a>
            <a class="next-slide-control"></a>
            <ol class="slide-bullets">
                @foreach (var image in Model)
                {
                    var className = image == Model.First() ? "active-bullet" : "bullet";
                    <li class="@className"></li>
                }
            </ol>
        }
    </div>
}
