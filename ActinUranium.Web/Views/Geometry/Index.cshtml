@model IEnumerable<string>

@{
    ViewData["Title"] = "Geometrie";
}

@section Styles {
    <style>
        .container {
            display: flex;
            flex-wrap: wrap;
        }

        .item {
            padding: 20px;
            height: 200px;
            width: 200px;
        }

        .item svg {
            width: 100%;
            height: 100%;
        }

    </style>
}

<article>
    <header>
        <h1>Geometrie</h1>
    </header>
    <div class="container">
        @foreach (var virtualPath in Model)
        {
            <div class="item" title="@virtualPath">
                <a href="@virtualPath.Remove(0, 2)" target="_blank">
                    @Html.Svg(virtualPath)
                </a>                
            </div>
        }
    </div>
</article>