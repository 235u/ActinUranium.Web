@page
@{
    Layout = null;
}

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        /*width: 100%;
        height: 100%;*/
        
    }

    main {
        margin: 100px 100px;
        overflow: hidden;
        background-color: azure;
        height: 500px;
    }

    .button-container {
        position: relative;
        height: 100px;
    }

    .button-container:not(:first-child) {        
        margin-top: -10px;
    }

    .button-background {
        height: 100px;
        width: 200px;
        background-color: lightgray;
        position: absolute;
        left: -130px;
    }

    .button-background:hover {
        left: 0;
    }

    .button {
        width: 190px;
        height: 80px;
        background-color: gray;
        position: absolute;        
        left: -130px;
    }

    .button:first-child {
        top: 10px;
    }

    .button:hover {
        left: 0;
    }
</style>

<main>
    <div class="button-container">
        <div class="button-background"></div>
        <div class="button"></div>
    </div>
    <div class="button-container">
        <div class="button-background"></div>
        <div class="button"></div>
    </div>
    <span>Bubu</span>
</main>




